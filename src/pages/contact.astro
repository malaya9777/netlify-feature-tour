---
import Layout from '../components/layout.astro';
---

<style>
.wrapper {
  display: block;
  text-align: center;
}
</style>

<Layout
  title="mtechno.in || Contact"
  description="Please contact me for any questions!"
  current="contact"
>
<main>
  <article class="contact">
      <form class="form" method="POST" name="contact" action="/success" netlify>
          <div class="form-input">
              <input type="text" required="" name="name" class="input" id=""
                  onfocus="checkLabel(this, 'labelName')" onblur="checkLabel2(this,'labelName')">
              <label for="name" id="labelName">Name</label>
          </div>
          <div class="form-input">
              <input type="email" required="" name="email" class="input" id=""
                  onfocus="checkLabel(this, 'labelEmail')" onblur="checkLabel2(this,'labelEmail')">
              <label for="email" id="labelEmail">Email</label>
          </div>
          <div class="form-input">
              <input type="tel" required="" name="phone" class="input" id=""
                  onfocus="checkLabel(this, 'labelPhone')" onblur="checkLabel2(this,'labelPhone')">
              <label for="phone" id="labelPhone">Phone</label>
          </div>
          <div class="form-input">
              <textarea name="description" required="" id="" onfocus="checkLabel(this, 'labelDescription')"
                  onblur="checkLabel2(this,'labelDescription')" spellcheck="false"
                  data-ms-editor="true" onclick="(this)=>{this.value.trim()}"></textarea>
              <label for="description" id="labelDescription">Requirement</label>
          </div>
          <button type="submit">Send</button>
      </form>
  </article>
  <article class="phone">
   
        <a href="tel:+919777343366">
            <span >Click here to call me on +919777343366</span>
        </a>
       
        <span class="or">OR</span>
       
        <a href="mailto:mtechno.bharat@gmail.com">
            <span >Click here to mail me on mtechno.bharat@gmail.com</span>
        </a>
  </article> 
</main>
<script src="/app.js" is:inline></script>
</Layout>